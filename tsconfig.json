{
  "compilerOptions": {
    "removeComments": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist/",
    "target": "es6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "jsx": "react",
    "experimentalDecorators": true
  },
  "include": ["./server/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
